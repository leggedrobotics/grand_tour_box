[Unit]
Description=ROScore service
After=network-online.target
After=phc2sys_mgbe0.service
After=phc2sys_mgbe1.service

[Service]
Type=forking
User=rsl
ExecStart=/bin/sh -c ". /opt/ros/noetic/setup.sh; . /etc/ros/env.sh; roscore & while ! echo exit | nc 192.168.2.51 11311 > /dev/null; do sleep 1; done"

[Install]
WantedBy=multi-user.target
