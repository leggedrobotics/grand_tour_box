<launch>
  <arg name="calibration" default="no"/>
  <arg name="box_namespace" default="gt_box"/>
  <arg name="hostname" default="$(env HOSTNAME)"/>

  <group ns="$(arg box_namespace)">  
    <node pkg="box_recording"
        name="rosbag_record_node_$(arg hostname)"
        type="rosbag_record_node.py"
        output="screen">
        <param name="capability_group" value="Recorder"/>
    </node>
  </group>
</launch>