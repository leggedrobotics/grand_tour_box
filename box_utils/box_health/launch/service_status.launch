<launch>
  <arg name="box_namespace" default="gt_box"/>
  <arg name="hostname" default="$(env HOSTNAME)"/>

  <group ns="$(arg box_namespace)">
    <node pkg="box_health"
        name="service_status_$(arg hostname)"
        type="publish_service_status.py"
        output="screen">
    </node>
  </group>
</launch>